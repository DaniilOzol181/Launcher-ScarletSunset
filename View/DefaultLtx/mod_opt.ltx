[mod_option_for_gameplay]
;Отображение дружественных и нейтральных НПС на КПК
friend_and_neutral_spot = true
;Отображение вражеских НПС на КПК
enemy_spot				= false
;Тайники Глав определённых группировок помимо основных ★
unique_treasures		= true
;Допрос раненных вражеских НПС
interrogation_of_enemies= false
;Случайное наполнение основных тайников ★
random_treasures 		= true
;Напарники с которыми будете путешествовать будут бессмертными
companion_immortality	= false
;Снятие частел тел с мутантов(рандома нет, с мутантов всегда можно снять часть тела, следует использовать со следующей функцией butcher_knife) ★
butcher					= true
;Невозможность снятия частей тела без ножа в слоте(если в рюкзаке есть, следует перенести в слот, функция не работает без предыдущей)
butcher_knife			= true
;Реалистичное использование предметов(например аптечку можно использовать несколько раз, а чтобы съесть консервы их сначала придётся открыть консервным ножом) ★
real_use_item			= false
;Есть возможность снять полу-убитую броню с НПС
dead_armor				= false
;Шанс снятия брони в % (изначально 35%)
dead_armor_rand 		= 35
;Максимальное значения состояния найденной брони в % (изначально 50%)
dead_armor_cond			= 50
;Повелитель зоны(добавлены все предметы + добавлены координаты для телепортации по локации + убран спавн ЛЮБЫХ НПС)
zone_master				= false
;Оружие нельзя использовать при использовании предметов
hide_wpn_use_items		= true
;При старте игры в рюкзак спавнится абсолютно рандомный набор(Броня, Оружие и предметы первой необходимости) ★
random_start_item		= false
;У всех торговцев есть возможность дать деньги в долг ГГ
money_v_dolg			= false
;Обмен предметами с НПС
exchanging_items		= true
;С некоторым шансом у бандитов появляются допинги(или наркотики, называйте как хотите) в виде шприцов улучшающими определённый параметр, переносимость веса(не путать с Геркулесом, этот допинг позволяет носить дополнительно только 5-10 кг) ★
drugs_on_bandit 		= false
;Возможность снятия с трупов определённого кол-ва денег
money_in_trup			= true
;Снятие денег с электронного кошелька или из обычного(если true то вам потребуется купить утилиту у какого либо НПС за 500р диалогом и потом есть возможность снятия денег)
money_in_online_wallet  = true
;Минимальное кол-во денег которое можно снять с трупа(не ставить больше max_money_in_trup, иначе ВЫЛЕТ!!!)
min_money_in_trup		= 100
;Максимальное кол-во денег которое можно снять с трупа(не ставить меньше min_money_in_trup, иначе ВЫЛЕТ!!!)
max_money_in_trup		= 5000
;Включена ли радиация в рюкзаке от артефактов(не с пояса, так же радиацию можно аннулировать при переносе артефактов в спец. контейнеры, их можно приобрести у торговце) ★
rad_artefact_in_ruksack = true
;Возможность собирать какое-либо устройство (ПЗИ, Рация или какое-либо другое) у техников за счёт переработки сброшенного оружия в контейнеры около них ★
tech_use_zap			= true
;Ручной фонарик вместо налобного ★
fonarik_v_ruke			= false
;Обмороки при низком кол-ве здоровья (шанс 1 к 10, но скорее всего вы всегда будете падать в обморок при здоровье меньше 20%) ★
fainting_from_malaise	= true
